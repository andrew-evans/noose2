/*

	Process Control Block

	stores process information in a 2d array in the following format:

		[pid, location]

*/

function PCB() {

	this.processes = [];
	this.pid = 0;

	this.init = function() {
		this.pid = 0;
	};

	this.addProcess = function(location) {
		this.processes.push([this.pid,location]);
		return this.pid++;
	};

	this.getProcess = function(p) {
		for (var i = 0; i < this.processes.length; i++) {
			if (this.processes[i][0] == p) {
				return this.processes[i];
			}
		}
		
		return -1;
	};

};
